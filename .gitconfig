#
# ~/.gitconfig
#

[core]
	excludesfile = ~/.cvsignore
	pager = less -eFRSX

[alias]
	br = branch
	ca = commit --all
	ci = commit
	co = checkout
	di = diff
	st = status --short --branch

[grep]
	patterntype = perl

[merge]
	tool = vimdiff

[mergetool]
	prompt = false

[push]
	default = current

[include]
	path = ~/.gitconfig.local
