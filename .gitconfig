#
# ~/.gitconfig
#

[core]
	excludesFile = ~/.cvsignore
	pager = less -eFRSX

[alias]
	ap = add --patch
	br = branch
	ca = commit --amend
	ci = commit
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	di = diff
	mt = mergetool
	pf = push --force-with-lease
	pu = push
	ra = rebase --abort
	rb = rebase
	rc = rebase --continue
	ri = rebase --interactive
	sp = stash pop
	ss = stash save
	st = status
	up = pull

[diff]
	mnemonicPrefix = true

[fetch]
	prune = true

[grep]
	lineNumber = true
	patternType = perl

[merge]
	tool = vimdiff

[pull]
	rebase = true

[push]
	default = current

[rebase]
	autoSquash = true

[status]
	short = true
	branch = true

[user]
	useConfigOnly = true

[include]
	path = ~/.gitconfig.local
