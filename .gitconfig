#
# ~/.gitconfig
#

[core]
	excludesFile = ~/.cvsignore
	pager = diff-highlight | less -R --tabs=9,17

[alias]
	ap = add --patch
	br = branch --verbose
	ca = commit --amend
	ci = commit
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	di = diff
	mt = mergetool
	pf = push --force-with-lease
	pu = push
	ra = rebase --abort
	rb = rebase
	rc = rebase --continue
	ri = rebase --interactive
	sp = stash pop
	ss = stash push
	st = status
	up = pull

[color "diff-highlight"]
	oldHighlight = bold
	oldReset = no-bold

[commit]
	verbose = true

[diff]
	mnemonicPrefix = true

[fetch]
	prune = true

[grep]
	lineNumber = true
	patternType = perl

[merge]
	tool = vim-fugitive

[mergetool "vim-fugitive"]
	cmd = vim -c Gdiffsplit! "$MERGED"
	trustExitCode = true

[pull]
	rebase = true

[push]
	default = current

[rebase]
	autoSquash = true

[status]
	short = true
	branch = true

[user]
	useConfigOnly = true

[include]
	path = ~/.gitconfig.local
