#
# ~/.screenrc
#

unsetenv DISPLAY

altscreen on
defscrollback 2000
ignorecase on
silencewait 15
startup_message off
vbell on

caption splitonly '%?%F%{=b bw}%?%3n %t'
hardstatus alwayslastline '%-Lw%{=b bw}%50>%n*%f %t%{-}%+Lw%<'
time '%D %d %M %Y %0c:%s %H%? %l%?'

bind % collapse
bind G screen w3m https://duckduckgo.com
bind V screen vim
