EDITOR=E
PAGER=nobs GROFF_NO_SGR=1
SHELL=rc
GIT_PAGER=$PAGER

fn fontexists { fontsrv -p -- $1 >/dev/null >[2=1] }

if (! ~ . $path) path=($path .)

if (~ $#font 0) {
	if (fontexists GoMono) font=/mnt/font/GoMono/18a/font
	if not font=/mnt/font/DejaVuSansMono/18a/font
}

if (~ $#tabstop 0) tabstop=4
