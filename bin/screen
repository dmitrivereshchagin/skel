#!/bin/sh

screendir=$HOME/.screen

( umask 0077 ; mkdir -p "$screendir" )

SCREEN_URLVIEW=$screendir/urlview
export SCREEN_URLVIEW

( umask 0077 ; touch "$SCREEN_URLVIEW" )

SCREENDIR=$screendir/sockets
export SCREENDIR

case $TERM in
*-256color) set -- -T screen-256color "$@"
esac

exec /usr/bin/screen "$@"
