#!/bin/sh

svn=$(= svn) || exit

test -t 1 || exec "$svn" "$@"

case "$1" in
di|diff|log)
    e=$(printf '\33')
    "$svn" "$@" |
    sed "
        /^-\{72\}$/,/^=\{67\}$/ !{
            s/^-.*/$e[31m&$e[m/
            t
            s/^+.*/$e[32m&$e[m/
            t
            s/^@.*/$e[36m&$e[m/
        }
        " |
    less -eFRSX
    ;;
ann|blame|h|st)
    "$svn" "$@" | less -eFSX
    ;;
*)
    exec "$svn" "$@"
    ;;
esac
