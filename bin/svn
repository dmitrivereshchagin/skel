#!/bin/sh

svn=/usr/bin/svn

test -t 1 || exec "$svn" "$@"

case $1 in
blame|ann|help|h|status|st)
    "$svn" "$@" | less
    ;;

diff|di|log)
    esc=$(printf '\33')
    "$svn" "$@" |
        sed -e '/^-\{72\}$/,/^=\{67\}$/ b' \
            -e "/^-/ s/.*/${esc}[31m&${esc}[m/" \
            -e "/^+/ s/.*/${esc}[32m&${esc}[m/" \
            -e "/^@/ s/.*/${esc}[36m&${esc}[m/" |
        less -R --tabs=9,17
    ;;

*)
    exec "$svn" "$@"
    ;;
esac
